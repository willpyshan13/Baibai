<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="@dimen/content_padding_top"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_search_result_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/carrefour"/>

    <TextView
        android:id="@+id/item_search_result_tv_name"
        android:layout_width="match_parent"
        android:text="家乐福"
        android:layout_marginTop="@dimen/content_padding"
        android:textAppearance="?android:textAppearanceMedium"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_search_result_tv_price"
        android:layout_width="wrap_content"
        android:text="$51"
        android:textColor="@color/search_result_price"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_height="wrap_content" />
</LinearLayout>