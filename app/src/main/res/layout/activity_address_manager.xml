<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.baibai.view.AddressManagerActivity">

    <include
        android:id="@+id/top_title"
        layout="@layout/layout_title" />

    <Button
        android:id="@+id/address_manager_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@color/top_bar_background"
        android:text="@string/add_new_address"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/address_manager_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/address_manager_btn"
        android:layout_below="@+id/top_title"
        android:dividerHeight="@dimen/content_padding" />
</RelativeLayout>
