<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Width_match_height_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Width_match_height_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Width_wrap_height_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Width_wrap_height_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Width_0_height_wrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Width_0_height_match">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Width_match_height_0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="HomeTopButton" parent="Width_wrap_height_wrap">
        <item name="android:textColor">@color/tab_bar_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HomeSortButton" parent="Width_wrap_height_wrap">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MMTabButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@color/tab_bar_text</item>
        <item name="android:background">@color/tab_bar_background</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:paddingTop">1.0dip</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="GoodsDetail">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:padding">@dimen/goods_detail_padding</item>
    </style>

    <style name="GoodsDetailText" parent="Width_wrap_height_wrap">
        <item name="android:layout_marginLeft">@dimen/goods_detail_margin_left</item>
    </style>

    <style name="GoodsDetailTextEms" parent="Width_wrap_height_wrap">
        <item name="android:layout_marginLeft">@dimen/goods_detail_margin_left</item>
        <item name="android:ems">@integer/goode_detail_ems</item>
    </style>

    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
